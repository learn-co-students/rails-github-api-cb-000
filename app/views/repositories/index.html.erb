<div class = "container">
  Welcome <%= @username %>
  <h1>Repos</h1>
  <!-- List repositories here! -->

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <% if @repos.size > 0 %>
    <ul>
      <% @repos.each do |repo|  %>
        <li>
          <%= repo["name"] %> | <%= link_to repo["html_url"], repo["html_url"] %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
