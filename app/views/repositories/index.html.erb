<div class="container">
  <h1>Repos</h1>
  <h2><%= @username%></h2>
  <br>
  <h3>Create a New Repository</h3>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
<h3>Your Repositories</h3>
<div class="container">
  <% if @error %>
    <%= content_tag :p, @error %>
  <% elsif @repositories %>
    <ul>
      <% @repositories.each do |repo| %>
        <li>
            <%= repo[:name] %><br>
            <%= link_to repo[:url], repo[:url] %><br>
            <%= repo[:description] %><br>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
